@model  MES.Models.UserModel
@using MES.Models;
@{
    ViewBag.Title = "跳蚤市场";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (PostMsg ps in ViewBag.PostMstLst as IEnumerable<PostMsg>)
{
    
    <div class="articleBlcok widget box" style="padding:10px 5px;border-radius:5px;background-color:#f5f5f5">
        <div class="article block untagged mb15" id="Msg_@ps.MsgID">
            <div class="author clearfix">
                <a style="display:inline-block" href="#" target="_blank" rel="nofollow">
                    <img class="userIcon" src="@Url.Content("~/assets/userIcon/"+ps.IconSrc)" alt="@ps.IconSrc">
                </a>
                <a style="display:inline-block" href="#" target="_blank" title="@ps.UserName">
                    @ps.UserName
                </a>
                <span style="float:right;display:block;">@ps.AddDateTime.ToString("yyyy-MM-dd hh:mm:ss")</span>
            </div>

            <div class="content">
                <a href="#" target="_blank" title="@ps.Title">
                    <h3>
                        @ps.Title----@ps.CategoryName
                    </h3>
                </a>
                @Html.Raw(ps.MsgContent)
            </div>

            <div class="stats">
                <span style="display:inline-block"></span>
                <span style="display:block;float:right">

                    <a href="#" class="qiushi_comments" target="_blank">
                        <i class="number">@ps.ReplyCount</i> 评&nbsp;论
                    </a>
                    <a href="#" class="qiushi_comments" target="_blank">
                        <i class="number">@ps.AttentionCount</i> 关&nbsp;注
                    </a>
                </span>
            </div>
